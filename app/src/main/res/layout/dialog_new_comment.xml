<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <!-- header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/normal_padding">
        <!-- icon -->
        <TextView
            android:id="@+id/bt_reply"
            android:text="@string/course_comment_reply_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reply_icon"
            android:padding="@dimen/thumb_padding"
            android:textSize="@dimen/normal_text_size_minus"
            android:textColor="@color/steelblue" />
        <!-- comment -->
        <TextView
            android:textSize="@dimen/normal_text_size_minus"
            android:text="新的评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </LinearLayout>

    <!-- content -->
    <EditText
        android:id="@+id/et_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_edit_text"
        android:padding="@dimen/normal_padding"
        android:layout_margin="@dimen/normal_margin"
        android:minLines="3"
        android:maxLines="10"
        android:fontFamily="@font/stxinwei"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:id="@+id/bt_cancel"
            android:text="取消"
            android:layout_margin="@dimen/normal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:textSize="@dimen/normal_text_size_minus"
            android:padding="@dimen/normal_padding"
            android:textColor="@color/steelblue"
            android:clickable="true"/>

        <TextView
            android:id="@+id/bt_ok"
            android:text="确定"
            android:layout_margin="@dimen/normal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:textSize="@dimen/normal_text_size_minus"
            android:padding="@dimen/normal_padding"
            android:textColor="@color/steelblue"
            android:clickable="true"/>

    </LinearLayout>
</LinearLayout>